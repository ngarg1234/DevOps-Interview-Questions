import boto3
from datetime import datetime

REGION = 'us-east-1'

WORK_START_HOUR = 9    # 9 AM
WORK_END_HOUR = 18     # 6 PM

ec2_client = boto3.client('ec2', region_name=REGION)

def is_within_working_hours():
    return WORK_START_HOUR <= datetime.now().hour < WORK_END_HOUR

def get_instance_ids_by_tag():
    response = ec2_client.describe_instances(
        Filters=[
            {
                'Name': 'tag:AutoSchedule',
                'Values': ['Yes']
            },
            {
                'Name': 'instance-state-name',
                'Values': ['running', 'stopped']
            }
        ]
    )

    instance_ids = []
    for reservation in response['Reservations']:
        for instance in reservation['Instances']:
            instance_ids.append(instance['InstanceId'])

    return instance_ids

def start_instances(instance_ids):
    if instance_ids:
        print("ðŸŸ¢ Starting instances:", instance_ids)
        ec2_client.start_instances(InstanceIds=instance_ids)
    else:
        print("âš ï¸ No instances found to start")

def stop_instances(instance_ids):
    if instance_ids:
        print("ðŸ”´ Stopping instances:", instance_ids)
        ec2_client.stop_instances(InstanceIds=instance_ids)
    else:
        print("âš ï¸ No instances found to stop")

def main():
    instance_ids = get_instance_ids_by_tag()

    if is_within_working_hours():
        print("âŒ› Inside working hours")
        start_instances(instance_ids)
    else:
        print("ðŸŒ™ Outside working hours")
        stop_instances(instance_ids)

if __name__ == "__main__":
    main()

